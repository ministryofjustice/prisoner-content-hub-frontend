<ul class="govuk-tabs__list">
  {% for accountType in accountTypes %}
    <li class="govuk-tabs__list-item{% if accountType == selected %} govuk-tabs__list-item--selected{% endif %}">
      <a class="govuk-tabs__tab" href="/money/transactions/{{accountType}}">
        {{ accountType | capitalize }}
      </a>
    </li>
  {% endfor %}
  {% if (selected === 'damage-obligations') or shouldShowDamageObligationsTab %}
    <li class="govuk-tabs__list-item{% if selected == 'damage-obligations' %} govuk-tabs__list-item--selected{% endif %}">
      <a class="govuk-tabs__tab" href="/money/damage-obligations">Damage obligations</a>
    </li>
  {% endif %}
</ul>
