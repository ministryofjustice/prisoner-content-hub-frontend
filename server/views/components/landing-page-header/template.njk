{% from "../featured-content-item/macro.njk" import hubFeaturedContentItem %}
{% from "../sub-menu/macro.njk" import hubSubMenu %}


{% set categoryName = {
  "644": "news-events",
  "787": "day-to-day",
  "651": "art-culture",
  "648": "healthy-mind-body",
  "646": "radio-shows-podcasts",
  "649": "inspiration",
  "650": "science-nature",
  "643": "history",
  "786": "legal-and-your-rights",
  "785": "music"
} %}

<div id="category-{{params.categoryId}}" class="govuk-hub-landing-page-header govuk-hub-{{ categoryName[params.categoryId] }}">
  <div class="govuk-width-container">
    <div class="govuk-main-wrapper">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half govuk-!-padding-top-6">
          <h1 id="title" class="govuk-heading-xl">{{ params.title }}</h1>
          {% if params.description.summary %}
            <p id="summary" class="govuk-body-l">{{ params.description.summary}}</p>
          {% endif %}

          {% if params.description.sanitized %}
            <div id="description" class="gov-uk-dynamic-content">
              {{params.description.sanitized | safe }}
            </div>
          {% endif %}
        </div>

        {% if params.image %}
          <div class="govuk-grid-column-one-half">
            <img src="{{params.image.url}}">
          </div>
        {% endif %}

        {# <div class="govuk-grid-column-one-half">
          {{ hubFeaturedContentItem({
              id: params.featuredContent.id,
              title: params.featuredContent.title,
              summary: params.featuredContent.description.summary,
              size: 'large',
              contentType: params.featuredContent.type,
              graphic: params.featuredContent.thumbnail,
              duration: params.featuredContent.duration
            })
          }}
        </div> #}
      </div>
      {% if (params.features.showLandingPageMenu)%}
        {{ hubSubMenu({
          data: params.menu,
          theme: "white"
        }) }}
      {% endif %}
    </div>
  </div>
</div>
