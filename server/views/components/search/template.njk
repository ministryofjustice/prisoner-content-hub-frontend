<div  id="search-wrapper">
  <form method="GET" action="/search">
    <label class="govuk-label" for="event-name">Search</label>
    <input class="govuk-search-input search-box" id="search" name="query" type="text" value="{{query}}" autocomplete="off" placeholder="Search the content hub">
    <button type="submit" class="govuk-button search-button">
      Search
    </button>
  </form>
</div>