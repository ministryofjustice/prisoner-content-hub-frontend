{% from "../content-tile-small/macro.njk" import contentTileSmall %}

{% if params.data | length %}
<section>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h2 class="govuk-hub-featured-content__category-title">{{ t("suggestedContent.youMightLike") }}</h2>
    </div>
  </div>
  <div class="content__four-items">
    {% for item in params.data %}
      {{ contentTileSmall({
        id: item.id,
        title: item.title,
        contentType: item.contentType,
        image: item.image,
        contentUrl: item.contentUrl,
        displayUrl: item.displayUrl,
        externalContent: item.externalContent,
        isNew: item.isNew
      }, t) }}
    {% endfor %}
  </div>
</section>
{% endif %}
