<header class="govuk-header top-bar-container" data-module="header">
  <div class="govuk-width-container top-bar">
    <h1 class="govuk-heading-m">
      <img class="hub-logo" src="/public/images/icons/content-hub.png" alt="logo">
      <a href="/" style="">Content Hub <span>{{ params.establishmentName }}</span></a>
    </h1>
    <div class="timeLogout">
      <div class="top-bar-time{% if params.userName %} loggedIn{% endif %}">
        <span data-target-id="todays-date">&nbsp;</span>
        <span data-target-id="todays-time"></span>
      </div>
      {% if params.userName %}
        <a href="/auth/logout?returnUrl={{ params.returnUrl }}">Sign out</a>
      {% endif %}
    </div>
  </div>
</header>
{% if params.showBar %}
  <div class="govuk-width-container">
    <hr class="govuk-section-break govuk-search-section-break--visible">
  </div>
{% endif %}
