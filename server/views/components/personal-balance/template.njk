{% from "../personal-balance-single/macro.njk" import personalBalanceSingle %}
{% if isLoggedIn %}
  <div id="money">
    <h2>Your account balances</h2>
    <div class="balances">
      {{ personalBalanceSingle({
        type: 'spends',
        error: params.data.error,
        amount: params.data.spends
      })}}
      {{ personalBalanceSingle({
        type: 'private',
        error: params.data.error,
        amount: params.data.cash
      })}}
      {{ personalBalanceSingle({
        type: 'savings',
        error: params.data.error,
        amount: params.data.savings
      })}}
    </div>
  </div>
{% else %}
  <span class="govuk-body">
    <a href="/auth/sign-in?returnUrl={{ params.authReturnUrl }}" class="govuk-link see-timetable">Sign in</a> to see your balances
  </span>
{% endif %}
