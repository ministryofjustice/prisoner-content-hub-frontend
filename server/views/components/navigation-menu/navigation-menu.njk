<div id="nav-menu" class="govuk-hub-navigation">
  <div class="govuk-width-container">
    <div class="govuk-hub-navigation__content-container">
      <ul class="govuk-hub-navigation__list govuk-!-margin-bottom-6">
          {% for menuItem in params.mainMenu %}
            <li class="govuk-hub-navigation__list-item govuk-hub-navigation__list-item--with-chevron">
              <a href="{{menuItem.href}}">{{menuItem.linkText}}</a>
            </li>
          {% endfor %}
      </ul>
      <div class="govuk-hub-container-seperator">
          <h3 class="govuk-hub-navigation__heading">Browse by topic</h3>
          <ul class="govuk-hub-navigation__list govuk-!-margin-bottom-4">
            {% for menuItem in params.topicsMenu %}
              <li class="govuk-hub-navigation__list-item govuk-hub-navigation__list-item-topic">
                <a href="{{menuItem.href}}">{{menuItem.linkText}}</a>
              </li>
            {% endfor %}
          </ul>
      </div>
    </div>
    <div id="nav-hide" class="govuk-hub-navigation-footer">
        <span>Hide menu</span>
    </div>
  </div>
</div>
