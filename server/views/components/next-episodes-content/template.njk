{% from "../episode-content-item/macro.njk" import episodeContentItem %}

{% if params.data | length %}
<div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h3 class="govuk-hub-featured-content__category-title">Watch next</h3>
    </div>
  </div>
  <div class="govuk-grid-row content-items govuk-hub-episodes-content-items">
    {% for item in params.data %}
      <div class="item govuk-grid-column-one-third">
          {{ episodeContentItem({
            id: item.id,
            title: item.title,
            image: item.image
          }) }}
      </div>
    {% endfor %}
  </div>
</div>
{% endif %}
