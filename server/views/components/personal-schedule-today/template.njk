{# {% extends "../component-or-error/macro.njk" %} #}
{% if params.error %}
  <div class="govuk-error-summary">
    <h2 class="govuk-error-summary__title">
      There is a problem
    </h2>
    <div class="govuk-error-summary__body">
      <p class="govuk-error-message">{{params.error}}</p>
    </div>
  </div>
{% else %}
  <div class="todays-events">
    <div>
      <h3 class="govuk-heading-m">Today's appointments</h3>
      <a href="/" class="govuk-link see-timetable">See your timetable</a>
    </div>
    <div class="govuk-body">
      <table>
        <thead>
          <tr>
            <th>Time</th>
            <th>Event</th>
          </tr>
        </thead>
        <tbody>
          {% for event in params %}
          <tr>
            <td>{{event.timeString}}</td>
            <td><strong>{{event.title}}</strong> {{event.location}}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endif %}
