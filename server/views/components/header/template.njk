<header class="govuk-header govuk-hub-header" role="banner" data-module="header">
  <div class="govuk-hub-header__topbar">
    <div class="govuk-width-container">
      <div class="govuk-grid-row govuk-hub-align-items-center">
        <div class="govuk-grid-column-one-half">
          <a href="/" class="govuk-hub-header__link govuk-hub-header__link--homepage">
            <span class="govuk-hub-header__title govuk-body govuk-!-font-weight-bold">Homepage</span>
            <span class="govuk-hub-header__prison">HMP Berwyn</span>
          </a>
        </div>
        <div class="govuk-grid-column-one-half govuk-hub-align-right">
          <span data-target-id="todays-date" class="govuk-hub-header__date govuk-body"></span>
          <span data-target-id="todays-time" class="govuk-hub-header__time"></span>
          {% if false %}
            <a id="menu-btn" href="#" role="button" class="govuk-button govuk-hub-start-menu">Menu</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <div class="govuk-hub-header__bottombar">
    <div class="govuk-width-container  govuk-!-margin-bottom-5">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full govuk-hub-align-right">
          {% if false %}
          <ul id="language" class="govuk-hub-language-toggle" aria-label="Language Toggle">
            <li class="govuk-hub-language-toggle__item">
                <a class="govuk-hub-language-toggle__link govuk-hub-language-toggle__link--active" href="{{ item.href }}">
                English
                </a>
            </li>
            <li class="govuk-hub-language-toggle__item">
              <a class="govuk-hub-language-toggle__link" href="{{ item.href }}">
                Cymraeg
              </a>
            </li>
          </ul>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</header>

{% if false %}
{%- include "../navigation-menu/navigation-menu.njk" -%}
{% endif %}

