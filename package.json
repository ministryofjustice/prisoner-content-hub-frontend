{
  "name": "gov-starter",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "start:dev": "yarn build && DEBUG=gov-starter-server* nodemon server.js | bunyan -o short",
    "build": "yarn run css-build",
    "css-build": "./bin/build-css",
    "clean": "rm -rf public/* .port.tmp *.log build/* uploads/* test-results.xml",
    "lint": "eslint . --cache --max-warnings 0",
    "test": "NODE_ENV=test mocha",
    "record-build-info": "node ./bin/record-build-info"
  },
  "engines": {
    "node": ">= 8.10.0",
    "npm": ">=5.6.0"
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "build-info.json"
    ],
    "delay": "2500"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "bunyan-request-logger": "^2.0.0",
    "compression": "^1.7.2",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-beta.3",
    "csurf": "^1.9.0",
    "date-fns": "^1.29.0",
    "dotenv": "^6.0.0",
    "express": "~4.16.3",
    "express-request-id": "^1.4.0",
    "govuk-elements-sass": "^3.1.3",
    "govuk-frontend": "^1.1.0",
    "govuk_frontend_toolkit": "^7.5.0",
    "govuk_template_jinja": "^0.24.1",
    "helmet": "^3.12.1",
    "mkdirp": "^0.5.1",
    "node-sass-middleware": "0.11.0",
    "nunjucks": "^3.1.3",
    "ramda": "^0.25.0",
    "request": "^2.87.0",
    "striptags": "^3.1.1",
    "superagent": "^3.8.3",
    "video.js": "^7.1.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.4.0",
    "eslint": "^5.1.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "mocha": "^5.2.0",
    "nock": "^9.4.2",
    "nodemon": "^1.18.2",
    "sass-middleware": "^0.0.3",
    "sinon": "^6.1.3",
    "superagent-nock": "^0.4.0",
    "supertest": "^3.1.0"
  }
}
