{
  "name": "prisoner-content-hub-frontend",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "dev": "npm-run-all --parallel dev:*",
    "dev:start": "DEBUG=gov-starter-server* nodemon server.js",
    "build": "npm run css-build",
    "css-build": "./bin/build-css",
    "clean": "rm -rf public/* .port.tmp *.log build/* uploads/* test-results.xml",
    "lint": "eslint . --cache --max-warnings 0",
    "test": "jest",
    "clear_jest": "jest --clearCache",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:e2e": "is-ci \"test:e2e:run\" \"test:e2e:dev\"",
    "test:e2e:run": "start-server-and-test start http://localhost:3000 cy:run",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 cy:open",
    "record-build-info": "node ./bin/record-build-info",
    "prettier": "prettier \"**/*.+(js|jsx|json|yml|yaml|css|scss|md)\"",
    "verify": "npm run lint && npm run prettier -- --list-different && npm run test",
    "format": "npm run prettier -- --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/prisoner-content-hub-frontend/"
  },
  "engines": {
    "node": ">= 14",
    "npm": ">=6.14.8"
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "**/__tests__/**",
      "build-info.json"
    ],
    "delay": "2500"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run verify"
    }
  },
  "jest": {
    "verbose": true,
    "testMatch": ["**/__tests__/**/*.[jt]s?(x)"]
  },
  "dependencies": {
    "@sentry/node": "^5.22.3",
    "axios": "0.20.0",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "compression": "^1.7.4",
    "cookie-session": "^2.0.0-rc.1",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "elastic-builder": "^2.7.1",
    "express": "~4.17.1",
    "express-request-id": "^1.4.1",
    "govuk-frontend": "^3.8.1",
    "helmet": "^4.1.1",
    "jquery": "^3.5.0",
    "jsonwebtoken": "^8.5.1",
    "mkdirp": "^1.0.4",
    "morgan": "^1.10.0",
    "nocache": "^2.1.0",
    "node-sass-middleware": "0.11.0",
    "nunjucks": "^3.2.2",
    "passport": "^0.4.1",
    "passport-azure-ad-oauth2": "0.0.4",
    "ramda": "^0.27.1",
    "redis": "^3.0.2",
    "uuid": "^8.3.0",
    "video.js": "^7.8.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "chance": "^1.1.7",
    "cypress": "^5.1.0",
    "eslint": "^7.8.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-import": "^2.22.0",
    "from-html": "^0.3.3",
    "husky": "^4.3.0",
    "is-ci": "^2.0.0",
    "jest": "^26.6.3",
    "jsdom": "^16.4.0",
    "lint-staged": "^10.3.0",
    "nock": "^13.0.4",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "start-server-and-test": "^1.11.3",
    "supertest": "^4.0.2"
  }
}
