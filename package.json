{
  "name": "prisoner-content-hub-frontend",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "postinstall": "husky",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "debug": "nodemon --inspect-brk server.js",
    "build": "npm run css-build && npm run precompile-templates",
    "css-build": "./bin/build-css",
    "clean": "rm -rf public/* .port.tmp *.log build/* uploads/* test-results.xml",
    "lint": "eslint . --cache --max-warnings 0",
    "test": "jest --runInBand",
    "clear_jest": "jest --clearCache",
    "test:e2e:ci": "npm run start-ci --prefix ./e2e",
    "test:e2e:ui": "npm run start-ui --prefix ./e2e",
    "record-build-info": "node ./bin/record-build-info",
    "prettier": "prettier \"**/*.+(js|jsx|json|css|scss|md)\"",
    "verify": "npm run lint && npm run prettier -- --list-different && npm run test",
    "format": "npm run prettier -- --write",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "precompile-templates": "mkdir -p assets/generated && nunjucks-precompile -n content-tile-small server/views/components/content-tile-small/template.njk > assets/generated/templates.js",
    "setup": "npm ci && hmpps-npm-script-run-allowlist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/prisoner-content-hub-frontend/"
  },
  "engines": {
    "node": "^24",
    "npm": "^11"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)"
    ]
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^8.0.0",
    "@sentry/node": "^9.47.1",
    "applicationinsights": "^2.9.8",
    "axios": "^1.13.2",
    "body-parser": "^2.2.2",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.8.1",
    "cookie-session": "^2.1.1",
    "cookies": "^0.9.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.4",
    "drupal-jsonapi-params": "^2.3.2",
    "express": "^5.2.1",
    "govuk-frontend": "^5.14.0",
    "helmet": "^8.1.0",
    "i18next": "^25.8.4",
    "i18next-fs-backend": "^2.6.1",
    "i18next-http-middleware": "^3.9.2",
    "jquery": "^3.7.1",
    "jsona": "1.9.7",
    "jsonwebtoken": "^9.0.3",
    "knex": "^3.1.0",
    "mkdirp": "^3.0.1",
    "moment": "^2.30.1",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "pg": "^8.18.0",
    "ramda": "^0.32.0",
    "redis": "^4.7.1",
    "video.js": "^8.23.7",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.6",
    "@ministryofjustice/hmpps-npm-script-allowlist": "0.0.3",
    "cheerio": "^1.2.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.2.7",
    "nock": "^14.0.10",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "supertest": "^7.2.2"
  },
  "overrides": {
    "js-yaml": "^4.1.1",
    "min-document": "2.19.2",
    "tar": "^7.5.3",
    "undici": "^7.21.0"
  }
}
