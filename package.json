{
  "name": "prisoner-content-hub-frontend",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "postinstall": "husky install",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run css-build && npm run precompile-templates",
    "css-build": "./bin/build-css",
    "clean": "rm -rf public/* .port.tmp *.log build/* uploads/* test-results.xml",
    "lint": "eslint . --cache --max-warnings 0",
    "test": "jest --runInBand",
    "clear_jest": "jest --clearCache",
    "test:e2e:ci": "npm run start-ci --prefix ./e2e",
    "test:e2e:ui": "npm run start-ui --prefix ./e2e",
    "record-build-info": "node ./bin/record-build-info",
    "prettier": "prettier \"**/*.+(js|jsx|json|css|scss|md)\"",
    "verify": "npm run lint && npm run prettier -- --list-different && npm run test",
    "format": "npm run prettier -- --write",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "precompile-templates": "mkdir -p assets/generated && nunjucks-precompile -n content-tile-small server/views/components/content-tile-small/template.njk > assets/generated/templates.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/prisoner-content-hub-frontend/"
  },
  "engines": {
    "node": ">= 16",
    "npm": ">= 8"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)"
    ]
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^1.6.4",
    "@sentry/node": "^7.30.0",
    "@sentry/tracing": "^7.30.0",
    "applicationinsights": "^2.4.0",
    "axios": "0.26.1",
    "body-parser": "^1.20.1",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.7.4",
    "cookie-session": "^2.0.0",
    "cookies": "^0.8.0",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "drupal-jsonapi-params": "^2.2.0",
    "express": "~4.18.2",
    "govuk-frontend": "^4.4.1",
    "helmet": "^5.1.1",
    "jquery": "^3.6.3",
    "jsona": "~1.9.7",
    "jsonwebtoken": "^9.0.0",
    "mkdirp": "^1.0.4",
    "moment": "^2.29.4",
    "nocache": "^3.0.4",
    "nunjucks": "^3.2.3",
    "passport": "^0.5.3",
    "passport-azure-ad-oauth2": "0.0.4",
    "ramda": "^0.28.0",
    "redis": "^4.5.1",
    "uuid": "^9.0.0",
    "video.js": "^7.20.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@sinonjs/fake-timers": "^10.0.2",
    "cheerio": "^1.0.0-rc.12",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.27.4",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jsdom": "^21.0.0",
    "lint-staged": "^13.1.0",
    "nock": "^13.3.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.2",
    "sass": "^1.57.1",
    "supertest": "^6.3.3"
  }
}
