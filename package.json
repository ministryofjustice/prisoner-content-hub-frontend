{
  "name": "digital-hub",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "dev": "npm-run-all --parallel dev:*",
    "dev:start": "DEBUG=gov-starter-server* nodemon server.js | bunyan -o short",
    "build": "npm run css-build",
    "css-build": "./bin/build-css",
    "clean": "rm -rf public/* .port.tmp *.log build/* uploads/* test-results.xml",
    "lint": "eslint . --cache --max-warnings 0",
    "test": "NODE_ENV=test mocha test",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:e2e": "is-ci \"test:e2e:run\" \"test:e2e:dev\"",
    "test:e2e:run": "start-server-and-test start http://localhost:3000 cy:run",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 cy:open",
    "record-build-info": "node ./bin/record-build-info",
    "prettier": "prettier \"**/*.+(js|jsx|json|yml|yaml|css|scss|md)\"",
    "verify": "npm run lint && npm run prettier -- --list-different && npm run test",
    "format": "npm run prettier -- --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/digital-hub/"
  },
  "engines": {
    "node": ">= 10.15.3",
    "npm": ">=6.4.1"
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "build-info.json"
    ],
    "delay": "2500"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run verify"
    }
  },
  "dependencies": {
    "axios": "0.18.1",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "bunyan-request-logger": "^2.1.0",
    "cheerio": "^1.0.0-rc.3",
    "compression": "^1.7.4",
    "cookie-session": "^2.0.0-beta.3",
    "date-fns": "^1.30.1",
    "dotenv": "^8.0.0",
    "elastic-builder": "^2.3.1",
    "express": "~4.16.4",
    "express-ntlm": "^2.3.0",
    "express-request-id": "^1.4.1",
    "govuk-frontend": "^3.0.0",
    "helmet": "^3.16.0",
    "jplayer": "^2.9.2",
    "jquery": "^3.4.1",
    "mkdirp": "^0.5.1",
    "mustache": "^3.0.1",
    "node-sass-middleware": "0.11.0",
    "nunjucks": "^3.2.0",
    "ramda": "^0.26.1",
    "retry-axios": "^1.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.5.0",
    "chance": "^1.0.18",
    "cypress": "^3.4.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-import": "^2.17.2",
    "from-html": "^0.3.3",
    "husky": "^2.2.0",
    "is-ci": "^2.0.0",
    "jsdom": "^15.0.0",
    "lint-staged": "^8.1.6",
    "mocha": "^6.1.4",
    "mutation-observer": "^1.0.3",
    "nock": "^10.0.6",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.14",
    "postcss-cli": "^6.1.2",
    "prettier": "^1.17.0",
    "sass-middleware": "^0.0.3",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "start-server-and-test": "^1.9.0",
    "supertest": "^4.0.2"
  }
}
