{
  "name": "digital-hub",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "dev": "npm-run-all --parallel dev:*",
    "dev:start": "DEBUG=gov-starter-server* nodemon server.js | bunyan -o short",
    "build": "npm run css-build",
    "css-build": "./bin/build-css",
    "clean": "rm -rf public/* .port.tmp *.log build/* uploads/* test-results.xml",
    "lint": "eslint . --cache --max-warnings 0",
    "test": "NODE_ENV=test mocha test",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:e2e": "is-ci \"test:e2e:run\" \"test:e2e:dev\"",
    "test:e2e:run": "start-server-and-test start http://localhost:3000 cy:run",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 cy:open",
    "record-build-info": "node ./bin/record-build-info",
    "prettier": "prettier \"**/*.+(js|jsx|json|yml|yaml|css|scss|md)\"",
    "verify": "npm run lint && npm run prettier -- --list-different && npm run test",
    "format": "npm run prettier -- --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/digital-hub/"
  },
  "engines": {
    "node": ">= 12",
    "npm": ">=6.4.1"
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "build-info.json"
    ],
    "delay": "2500"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run verify"
    }
  },
  "dependencies": {
    "axios": "0.19.2",
    "body-parser": "^1.19.0",
    "bunyan-request-logger": "^2.1.0",
    "cheerio": "^1.0.0-rc.3",
    "compression": "^1.7.4",
    "cookie-session": "^2.0.0-rc.1",
    "date-fns": "^2.11.1",
    "dotenv": "^8.2.0",
    "elastic-builder": "^2.6.0",
    "express": "~4.17.1",
    "express-request-id": "^1.4.1",
    "fast-xml-parser": "^3.16.0",
    "govuk-frontend": "^3.6.0",
    "helmet": "^3.22.0",
    "jplayer": "^2.9.2",
    "jquery": "^3.5.0",
    "ldap-authentication": "^2.1.3",
    "mkdirp": "^1.0.4",
    "node-sass-middleware": "0.11.0",
    "nunjucks": "^3.2.1",
    "ramda": "^0.27.0",
    "retry-axios": "^2.1.2",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.5.0",
    "chance": "^1.1.4",
    "cypress": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-import": "^2.20.2",
    "from-html": "^0.3.3",
    "husky": "^4.2.3",
    "is-ci": "^2.0.0",
    "jsdom": "^16.2.2",
    "lint-staged": "^10.1.2",
    "mocha": "^7.1.1",
    "nock": "^12.0.3",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.3",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "start-server-and-test": "^1.10.11",
    "supertest": "^4.0.2"
  }
}
