{
  "name": "e2e",
  "version": "1.0.0",
  "description": "Playwright tests",
  "main": "index.js",
  "scripts": {
    "test": "export $(cat test-local.env | xargs) && playwright test",
    "test:features": "export $(cat test-local.env | xargs) && playwright test --grep \"Feature:\"",
    "test:ui": "export $(cat test-local.env | xargs) && playwright test --ui",
    "test:headed": "export $(cat test-local.env | xargs) && playwright test --headed",
    "test:debug": "export $(cat test-local.env | xargs) && playwright test --debug",
    "run-server": "export $(cat test-local.env) && node ../server.js",
    "run-wiremock": "docker-compose up wiremock | sed 's/^[^|]*[^ ]* //'",
    "start-ui": "concurrently --names \"PLAYWRIGHT,SERVER,WIREMOCK \" -c \"bgBlue.bold,bgMagenta.bold,bgGreen.bold\" \"npm run test:ui\" \"npm run run-server\" \"npm run run-wiremock\"",
    "start-ci": "docker-compose up --build --abort-on-container-exit --exit-code-from playwright",
    "report": "playwright show-report",
    "install-deps": "playwright install",
    "setup": "npm ci && hmpps-npm-script-run-allowlist"
  },
  "engines": {
    "node": ">= 22",
    "npm": ">= 10"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@ministryofjustice/hmpps-npm-script-allowlist": "0.0.3",
    "@playwright/test": "^1.58.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.12",
    "@types/superagent": "^8.1.9",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "concurrently": "^9.2.1",
    "date-fns": "^4.1.0",
    "eslint": "^9.39.2",
    "jsonwebtoken": "^9.0.3",
    "mocha-junit-reporter": "^2.2.1",
    "superagent": "^10.3.0",
    "typescript": "^5.9.3"
  }
}
