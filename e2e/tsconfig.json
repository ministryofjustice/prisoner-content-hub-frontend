{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "tests/**/*",
    "fixtures/**/*",
    "utils/**/*",
    "step-definitions/**/*",
    "framework/**/*",
    "features/**/*",
    "playwright.config.ts"
  ],
  "exclude": ["node_modules", "dist", "cypress"]
}
